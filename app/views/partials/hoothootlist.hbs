<section class="ui raised segment">
  <div class="ui grid">
    <aside class="six wide column">
      <img src="images/owl_and_cat.jpg" class="ui medium image">
    </aside>
    <article class="eight wide column">
      {{#if hoots}}
      <form class="ui form"  action="/deletehoot" method="POST">
      {{#each hoots}}
      <table class="ui celled table segment">

        <thead>
        <tr>
          <th>{{hooter.firstName}} {{hooter.lastName}} says:</th>
          <th>                <div class="ui checkbox">
            <input name="{{_id}}" type="checkbox">
            <label>Delete</label>
          </div></th>
        </tr>
        </thead>
        <tbody>

          <tr>
            <td><div style="height: 100px; width: 200px;">{{hootmain}}</div>  </td>
            <td>{{#if hashtag}}#{{/if}}{{hashtag}} <br><br><br><br> {{date}} </td>
          </tr>

        </tbody>

      </table>
        {{/each}}
        <button  class="ui red submit icon button"> Delete Selected
        </button>
      </form><br><br>
        <form class="ui form" action="/deleteallhoots" method="POST">
          <button class="ui red submit icon button">Delete All My Hoots</button>
        </form>
      {{/if}}
    </article>
  </div>
</section>
<script src="js/checkbox.js">
</script>